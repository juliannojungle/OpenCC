{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ssh pi@raspberrypi build && run",
            "group": "build",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi@raspberrypi",
                "\"",
                    "g++",
                    "-L", "/home/pi/OpenCC/src/Dependency/raylib",
                    "-L", "/opt/vc/lib",
                    "-I", "/home/pi/OpenCC/src/Dependency/raylib",
                    "-g", "/home/pi/OpenCC/src/OpenCC.cpp",
                    "-o", "/home/pi/OpenCC/src/opencc",
                    "-lraylib -lbrcmEGL -lbrcmGLESv2 -lpthread -lbcm_host",
                    "&&","chmod","+x","/home/pi/OpenCC/src/opencc",
                    "&&","/home/pi/OpenCC/src/opencc",
                "\""
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "showReuseMessage": false,
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "wsl arm build",
            "group": "build",
            "type": "shell",
            "command": "wsl",
            "args": [
                "/opt/gcc-arm-none-eabi/bin/arm-none-eabi-g++",
                "-std=c++11",
                "--specs=nosys.specs",
                //"-L", "src/Dependency/raylib",
                //"-L", "/opt/vc/lib",
                //"-I", "src/Dependency/raylib",
                "-g", "src/OpenCC.cpp",
                "-o", "src/opencc",
                //"-lraylib -lbrcmEGL -lbrcmGLESv2 -lpthread -lbcm_host"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "showReuseMessage": false,
                "panel": "shared",
                "clear": true
            }
        }
    ]
}