{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ssh build: pi@raspberrypi",
            "group": "build",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi@raspberrypi",
                "\"",
                    "g++",
                    "-std=c++11",
                    "-L", "/home/pi/OpenCC/src/Dependency/raylib/src",
                    "-L", "/opt/vc/lib",
                    "-I", "/home/pi/OpenCC/src/Dependency/raylib/src",
                    "-g", "/home/pi/OpenCC/src/OpenCC.cpp",
                    "-o", "/home/pi/OpenCC/src/opencc",
                    "-lraylib -lbrcmEGL -lbrcmGLESv2 -lpthread -lbcm_host",
                    // "&&","pkill opencc",
                    // "&&","/home/pi/OpenCC/build/opencc",
                "\""
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "showReuseMessage": false,
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "wsl build: gcc-arm-none-eabi",
            "group": "build",
            "type": "shell",
            "command": "wsl",
            "args": [
                "/opt/gcc-arm-none-eabi/bin/arm-none-eabi-g++",
                "-std=c++11",
                "--specs=nosys.specs",
                "-L", "src/Dependency/raylib/src",
                "-L", "/opt/vc/lib",
                "-I", "src/Dependency/raylib/src",
                "-g", "src/OpenCC.cpp",
                "-o", "build/opencc",
                "-lraylib -lbrcmEGL -lbrcmGLESv2 -lpthread -lbcm_host"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "showReuseMessage": false,
                "panel": "shared",
                "clear": true
            }
        }
    ]
}