{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SSH build: pi@raspberrypi",
            "group": "build",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi@raspberrypi.local",
                "\"",
                    "mkdir -p /home/pi/OpenCC/build",
                    "&&", "g++",
                    "-std=c++14",
                    "-L", "/home/pi/OpenCC/src/Dependency/raylib/src",
                    "-L", "/opt/vc/lib",
                    "-I", "/home/pi/OpenCC/src/Dependency/raylib/src",
                    "-g", "/home/pi/OpenCC/src/OpenCC.cpp",
                    "-o", "/home/pi/OpenCC/build/OpenCC",
                    "-lraylib -lbrcmEGL -lbrcmGLESv2 -lpthread -lbcm_host",
                    // "&&","pkill OpenCC",
                    // "&&","/home/pi/OpenCC/build/OpenCC",
                "\""
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "showReuseMessage": false,
                "panel": "shared",
                "clear": true
            }
        },
